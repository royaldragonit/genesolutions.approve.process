@using eDoc_Core.Models.Entities.Views;
@model List<vApproveProcess>
<div class="row" style="margin-bottom:10px;">
    <div class="col-md-12">
        <a class="btn btn-success" href="/ApproveProcess/Create">Thêm mới</a>
    </div>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Tên</th>
            <th>Mô tả</th>
            <th>Số bước</th>
            <th>Người tạo</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox" /></td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Step</td>
                <td>@item.Email</td>
                <td><a class="btn btn-info" href="@string.Concat("/ApproveProcess/Detail/",item.ApproveProcessId)">Chi tiết</a></td>
            </tr>
        }
        @{ if (Model == null || Model.Count() == 0)
            {
                <tr>
                    <td></td>
                    <td>Danh sách mẫu quy trình rỗng!</td>
                    <td></td>
                    <td></td>
                </tr>
            }
        }
    </tbody>
</table>